@import url("layout/basic.css");

.zpMenuClearskies .zpMenu {
	background: url("clearskies/menu_bg.gif");
	border: 1px solid #808080; 
	width:auto !important;
}

/* Current selected items in top horizontal menu*/
.zpMenuClearskies .zpMenu-top .zpMenu-label,
.zpMenuClearskies .zpMenu-top a {
	color: #3083D0;
}

.zpMenuClearskies .zpMenu-level-1 .zpMenu-label {
	font-weight:bold;
}

.zpMenuClearskies .zpMenu-top .zpMenu-item-selected .zpMenu-label,
.zpMenuClearskies .zpMenu-top .zpMenu-item-selected a{
	color: #3083D0;
}

/* Current selected items in vertical menu*/
.zpMenuClearskies .zpMenu-top .zpMenu-item-selected {
	background: #FFF;    
}

/* The arrow that shows up when there's a sub-menu */
.zpMenuClearskies .zpMenuContainer .zpMenuContainer .zpMenu-item-collapsed  .zpMenu-label {
	background: url("clearskies/arrow.gif") no-repeat right center;
}

/* The arrow that shows up when there's a sub-menu and the item is hovered*/
.zpMenuClearskies .zpMenuContainer .zpMenuContainer .zpMenu-item-expanded  {
	background: url("clearskies/arrow_hover.gif") #FFF no-repeat right center;
}

/* Override previously defined background defined in this css for HR */
.zpMenuClearskies .zpMenuContainer .zpMenu-item-hr,
.zpMenuClearskies .zpMenuContainer .zpMenuContainer .zpMenu-item-hr {
	padding:0;
	margin:0;
	border:none;
	background:black;
}

.zpMenu-horizontal-mode .zpMenu-level-1 { 
  padding-left:16px;
  padding-right:17px; 
}
